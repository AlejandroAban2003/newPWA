.modal
  position fixed
  max-width 400px
  width 80vw
  padding 10px
  margin 0
  flex-flow column
  align-items center
  box-shadow 0 2px 5px 0 rgba(0, 0, 0, 0.16), 0 2px 10px 0 rgba(0, 0, 0, 0.12)
  background-color white
  form
    width 100%
  textarea
    width 100%
    height 150px
    box-sizing border-box
    border 2px solid #ccc
    resize none
  input
    box-sizing border-box
    width 100%
  button
    margin-top 10px
    margin-right 10px
    box-shadow 0 2px 5px 0 rgba(0,0,0,0.225) 
    border none
    padding 15px 32px
    text-align center
    text-decoration none
    display inline-block
    font-size 16px
    cursor pointer
    &:hover
      box-shadow 0 4px 11px 0px rgba(0,0,0,0.375)
.primary
  color white
  background-color #03a9f4
.normal
  background-color #f2f2f2 
   
